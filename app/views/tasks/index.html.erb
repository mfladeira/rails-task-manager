<h1>My tasks</h1>
<ul>
  <% @tasks.each do |task| %>
    <li style="list-style: none"><input type="checkbox" name="" id="">
      <%= link_to task.title, task_path(task) %>
      <%= link_to "Delete", task_path(task), method: :delete, data: { confirm: "Are you sure"} %>
    </li>
  <% end %>
</ul>

<%= link_to "Add task", new_task_path %>
